module <%= name %>
  module Configurations
    class Development < Default
      
      database :host => 'localhost', :adapter => 'sqlite', :database => '<%= name.downcase %>',
        :user => 'root', :password => ''
      
      host '127.0.0.1'
      
      port 3000
      
      reloadable [ <%= name %> ]
      
      log :level => :debug

	  handler Rack::Handler::Mongrel
      
      application do
        use Rack::ShowExceptions
        run Waves::Dispatchers::Default.new
      end
      
    end
  end
end
